@model BeautyStore.Models.Brand

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

    @using (Html.BeginForm("Edit", "AdminBrands", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.BrandID)
        <label for="topic">Tên danh mục : </label>
        <input value="@Model.BrandName" class="form-control" style="width:300px" />
        <br />
        <div class="box-img-admin">
            <label for="imgInp">Hình ảnh :</label><br />
            <img id="blah" src="~/image/@Model.BrandImage" alt="" width="200px" /><br /><br />

            <input accept="image/*" type='file' id="imgInp" name="ImgBrand" /><br>
        </div>
        <br>
        <div style="margin: 10px 0px;">
            <button type="submit" class="btn btn-success">Lưu</button>
            <a class="btn btn-danger" style="color:#fff">Xóa</a>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>
   